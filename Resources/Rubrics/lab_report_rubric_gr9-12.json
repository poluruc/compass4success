{
  "id": "lab_report_rubric_gr9-12",
  "title": "Ontario Lab Report Rubric (Grades 9-12)",
  "description": "Rubric for evaluating science lab reports in Ontario Grades 9-12.",
  "applicableGrades": [9, 10, 11, 12],
  "criteria": [
    {
      "name": "Hypothesis & Purpose",
      "levels": [
        { "level": 1, "description": "Unclear or missing hypothesis/purpose." },
        { "level": 2, "description": "Somewhat clear hypothesis/purpose." },
        { "level": 3, "description": "Clear and relevant hypothesis/purpose." },
        { "level": 4, "description": "Highly insightful and relevant hypothesis/purpose." }
      ]
    },
    {
      "name": "Procedure & Method",
      "levels": [
        { "level": 1, "description": "Limited detail or clarity." },
        { "level": 2, "description": "Some detail and clarity." },
        { "level": 3, "description": "Clear and logical procedure." },
        { "level": 4, "description": "Highly detailed and logical procedure." }
      ]
    },
    {
      "name": "Analysis & Results",
      "levels": [
        { "level": 1, "description": "Limited analysis or accuracy." },
        { "level": 2, "description": "Some analysis and accuracy." },
        { "level": 3, "description": "Accurate and logical analysis." },
        { "level": 4, "description": "Highly insightful and accurate analysis." }
      ]
    },
    {
      "name": "Conclusion",
      "levels": [
        { "level": 1, "description": "Limited or unclear conclusion." },
        { "level": 2, "description": "Somewhat clear conclusion." },
        { "level": 3, "description": "Clear and relevant conclusion." },
        { "level": 4, "description": "Highly insightful and relevant conclusion." }
      ]
    }
  ]
} 